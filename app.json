{
  "name": "mPBot",
  "description": "mParticle Ask Design Bot",
  "repository": "https://github.com/grahamd711/mp-bot.git",
  "success_url": "/",
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "MPBOT_COMMAND_TOKEN": {
      "description": "Slash command token, for the mPBot command endpoint",
      "required": true
    },
    "SLACK_TOKEN": {
      "description": "Slack bot RTM API token",
      "required": false
    },
    "NODE_ENV": "staging"
  },
  "image": "heroku/nodejs"
}
